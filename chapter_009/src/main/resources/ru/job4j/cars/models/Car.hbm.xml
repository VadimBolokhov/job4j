<?xml version="1.0" encoding="UTF-8"?>
<hibernate-mapping>
    <class name ="ru.job4j.cars.models.Car" table="car">
        <id name="id" column="id">
            <generator class="identity"/>
        </id>
        <property name="make" column="name"/>
        <many-to-one name="body"
                     column="body_id"
                     class="ru.job4j.cars.models.Body"
                     lazy="false"
                     cascade="save-update"/>
        <many-to-one name="engine"
                     column="eng_id"
                     class="ru.job4j.cars.models.Engine"
                     lazy="false"
                     cascade="save-update"/>
        <many-to-one name="transmission"
                     column="trans_id"
                     class="ru.job4j.cars.models.Transmission"
                     lazy="false"
                     cascade="save-update"/>
    </class>
</hibernate-mapping>